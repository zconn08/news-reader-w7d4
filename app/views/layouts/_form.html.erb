<form action="<%= action_url %>" method="post">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label> Username:
    <input type="text" name="user[username]" value="<%= user.username %>">
  </label>

  <label> Password:
    <input type="password" name="user[password]" value="<%= user.password %>">
  </label>

  <input type="submit">
</form>
